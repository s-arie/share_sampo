<table>
  <tbody>
      <% post_image.post_comments.each do |post_comment| %>
      <tr>
        <td>
          <%= link_to user_path(post_comment.user) do %>
            <%= image_tag post_comment.user.get_profile_image(50,50) %><br>
            <%= post_comment.user.name %>
          <% end %>
        </td>
        <td><%= post_comment.comment %></td>
        <td>
          <% if post_comment.user == current_user %>
            <%= link_to "削除する", post_image_post_comment_path(post_image, post_comment), method: :delete, class: "btn btn-danger pull-right", remote: true %>
          <% elsif admin_signed_in? %>
            <%= link_to "削除する", admin_post_image_post_comment_path(post_image, post_comment), method: :delete, class: "btn btn-danger pull-right", remote: true %>
          <% end %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>