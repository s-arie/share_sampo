<table class='table'>
  <thead>
    <tr>
      <th>ユーザー画像</th>
      <th>ユーザー名</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(50,50) %></td>
        <td><%= user.name %><br>
            <%= link_to user.name + "さんの投稿を見る", user_path(user) %>
        </td>
      </tr>
      <tr>
        <th>follows</th>
        <th><%= link_to user.followings.count, user_followings_path(user) %></th>
      </tr>
      <tr>
        <th>followers</th>
        <th><%= link_to user.followers.count, user_followers_path(user) %></th>
      </tr>
    <% end %>
  </tbody>
</table>