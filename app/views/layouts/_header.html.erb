<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/"><span>シェアさんぽ</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li>
            <%= link_to user_path(current_user),class: 'nav-link text-light' do %>
              <i class="fas fa-home"></i> ホーム
            <% end %>
          </li>
          <li>
            <%=  link_to users_path,class: 'nav-link text-light' do %>
              <i class="fas fa-users"></i> ユーザー一覧
            <% end %>
          </li>
          <li>
            <%=  link_to post_images_path ,class: 'nav-link text-light' do %>
              <i class="fas fa-book-open"></i> 投稿一覧
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete,class: 'nav-link text-light' do %>
              <i class="fas fa-sign-out-alt"></i> ログアウト
            <% end %>
          </li>

          <% elsif admin_signed_in? %>
          <div class="ml-1">
            <%= link_to admin_users_path, class: 'btn btn btn-light btn-block text-dark' do %>
              <i class="fas fa-users"></i>ユーザー一覧
            <% end %>
          </div>
          <div class="ml-1">
            <%= link_to admin_post_images_path, class: 'btn btn btn-light btn-block text-dark' do %>
              <i class="fas fa-list-ul"></i>投稿一覧
            <% end %>
