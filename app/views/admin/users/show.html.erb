<div class="container">
	<h4 class="mt-2 p-2 text-center bg-secondary text-white col-sm-5"><%= @user.name %>さんの会員詳細</h4>
	<table class="table table-borderless col-6">
		<tr>
			<th>ユーザーID</th>
			<td><%= @user.id %></td>
		</tr>
		<tr>
			<th>ユーザー名</th>
			<td><%= @user.name %></td>
		</tr>
		<tr>
			<th>メールアドレス</th>
			<td><%= @user.email %></td>
		</tr>
		<tr>
			<th>会員ステータス</th>
			<td>
				<% if @user.user_status == true %>
					<p class="text-success font-weight-bold">有効</p>
				<% else %>
					<p class="text-secondary font-weight-bold">退会</p>
				<% end %>
			</td>
		</tr>
		<tr>
			<th></th>
			<td><%= link_to  "編集する", edit_admin_user_path(@user.id), class:"btn btn-sm btn-success" %></td>
			<td><%= link_to  "投稿一覧を見る", admin_post_images_path, class:"btn btn-sm btn-primary" %><td>
		</tr>
	</table>
</div>