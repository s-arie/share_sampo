<div class='container'>
  <div class='row'>
    <div class='col-md-8 offset-md-1'>
  		<%= image_tag @post_image.get_image %>
      <p>タイトル：<%= @post_image.title %></p>
      <p>キャプション：<%= @post_image.caption %></p>
      <p>投稿ユーザー画像：<%= image_tag @post_image.user.get_profile_image(100,100) %></p>
      <p>投稿者：<%= @post_image.user.name %></p>
      <p>投稿日：<%= @post_image.created_at.strftime('%Y/%m/%d') %></p>
      <% if @post_image.user == current_user %>
        <p><%= link_to 'Destroy', @post_image, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_post_image_#{@post_image.id}" %></p>
      <% end %>
      <div class=<%= "favorite-" + @post_image.id.to_s %> >
        <%= render "public/favorites/btn", post_image: @post_image %>
      </div>
      <div class="post_image-comments-counter">
        <%= render "public/post_comments/counter", post_image: @post_image %>
      </div>
      <div class="post-comments-index">
        <%= render "public/post_comments/index", post_image: @post_image %>
      </div>
      <%= render "public/post_comments/form", post_image: @post_image, post_comment: @post_comment %>
    </div>
  </div>
</div>